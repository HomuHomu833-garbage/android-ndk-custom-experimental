#!/usr/bin/env sh

set -euo pipefail

PATHS=(
  "/data/data/com.termux/files/usr/bin/lldb"
  "/usr/local/bin/lldb"
  "/usr/bin/lldb"
  "/bin/lldb"
)

for path in "${PATHS[@]}"; do
  if [[ -x "$path" ]]; then
    exec "$path" "$@"
  fi
done

echo "Error: lldb not found. Please install it using your package manager." >&2
exit 1
